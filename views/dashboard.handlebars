<div class="row">
		<!-- This needs to be loaded in dynamically as well -->
        <div class="col s3 col-1 emp-card">
            <div class="col s12">
                <div class="card off-white-bg">
                    <div class="profile-pic"></div>
                    <div class="card-content">
                        <span class="card-title name">John Smith</span>
                        <div class="manager-badge">Manager</div>
                    </div>
                    <div class="card-action">
						<button class = "btn modal-trigger" data-target = "addShift" id = "btnAddShift">Add Shift</button>
                        <button class = "btn modal-trigger" data-target = "addEmployee" id = "btnAddEmployee">Add Employee</button>
                    </div>
                </div>
            </div>
        </div>
		<!-- This is the dynamically loaded calendar.  It shows all shifts for all employees -->
		<!-- I may want to add id's somewhere in here -->
        <div class="col s9 col-2 emp-month-card">
			<div class = "row">
				<div class = "col s2">
					Employee Name
				</div>
				{{#each data.formatedDates}}
				<div class = "col s1 day">
					{{this}}
				</div>
				{{/each}}
			</div>
			<!-- Start of employee Rows -->
			{{#each data.rows}}
			<div class="row">
				<div class = "col s2">
					{{name}}
				</div>

				{{#each days}}
				<div class = "col s1">
					{{#if this}}
						{{#each this}}
						<!-- Load in shift partial -->
							{{> shifts}}
						{{/each}}
					{{/if}}
				</div>
				{{/each}}

			</div>
			{{/each}}
        </div>

    </div>
</div>

<div id="addShift" class="modal modal-fixed-footer login-modal">
    <div class="modal-content">
		<input type="text" name="">
    </div>
    <div class="modal-footer">
        <a href="#!" class="modal-action modal-close waves-effect waves-green btn-flat ">Cancel</a>
        <a href="#!" class="modal-action modal-close waves-effect waves-green btn-flat ">Login</a>
    </div>
</div>

<div id="addEmployee" class="modal modal-fixed-footer login-modal">
    <div class="modal-content">
		<input id="empName" type="text" class="validate">
        <label for="empName">Employee Name</label>

        <input id="empDob" type="text" class="validate">
        <label for="empDob">Date of Birth</label>
		<br>
        <input id="empManager" type="checkbox" class="validate">
        <label for="empManager">Give Manager Permissions</label>

    </div>
    <div class="modal-footer">
        <a href="#!" class="modal-action modal-close waves-effect waves-green btn-flat ">Cancel</a>
        <p id= "empSubmit" class="modal-action modal-close waves-effect waves-green btn-flat"> Submit </p>
    </div>
</div>

<div id="alert" class="modal modal-fixed-footer login-modal">
    <div class="modal-content">
		
    </div>
    <div class="modal-footer">
        <p id= "alertClear" class="modal-action modal-close waves-effect waves-green btn-flat"> OK </p>
    </div>
</div>